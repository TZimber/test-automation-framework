<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.baloise.testing.framework</groupId>
        <artifactId>taf</artifactId>
        <version>master-SNAPSHOT</version>
    </parent>

    <artifactId>taf-swing-server</artifactId>

    <packaging>pom</packaging>

    <name>Test Automation Framework - Swing Server</name>

    <properties>
        <taf-swing-server.basedir>${project.basedir}</taf-swing-server.basedir>
    </properties>

    <build>
        <sourceDirectory>${taf-swing-server.basedir}/src/main/java</sourceDirectory>
        <testSourceDirectory>${taf-swing-server.basedir}/src/test/java</testSourceDirectory>
        <resources>
            <resource>
                <directory>${taf-swing-server.basedir}/src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.6</version>
                    <configuration>
                        <descriptorRefs>
                            <descriptorRef>jar-with-dependencies</descriptorRef>
                        </descriptorRefs>
                    </configuration>
                    <executions>
                        <execution>
                            <id>make-assembly</id>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <dependencies>
        <dependency>
            <groupId>com.github.baloise.test-automation-framework</groupId>
            <artifactId>taf-swing-base</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.5</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <modules>
        <module>taf-swing-server-java6</module>
        <module>taf-swing-server-java8</module>
    </modules>
</project>
